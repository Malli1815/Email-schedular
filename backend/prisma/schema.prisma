generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  avatar        String?
  emailsSent    Email[]
  createdAt     DateTime  @default(now())
}

model Email {
  id             String      @id @default(cuid())
  userId         String
  user           User        @relation(fields: [userId], references: [id])
  recipient      String
  subject        String
  body           String
  scheduledAt    DateTime
  sentAt         DateTime?
  status         EmailStatus @default(SCHEDULED)
  error          String?
  createdAt      DateTime    @default(now())
}

enum EmailStatus {
  SCHEDULED
  SENT
  FAILED
}
